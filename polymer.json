{
  "entrypoint": "index.html",
  "shell": "src/hn-app.html",
  "fragments": [
    "src/hn-list.html",
    "src/hn-item.html",
    "src/hn-user.html",
    "src/hn-offline.html",
    "src/hn-404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "package.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/*.js"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
